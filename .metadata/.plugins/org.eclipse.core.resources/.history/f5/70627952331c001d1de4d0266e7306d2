package Entities;

import java.io.Serializable;
import java.sql.Date;
import java.sql.Timestamp;
import java.util.List;

import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.ManyToOne;
import javax.persistence.OneToMany;

import Entities.DichVuPhong;
@Entity
public class KhachTrongPhong implements Serializable{
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private int id;
	@ManyToOne
	private HoaDon hoadon;
	@ManyToOne
	private Phong phong;
	@OneToMany (mappedBy = "khachTrongPhong")
	private List<DichVuPhong> dsdichvu;
	@OneToMany (mappedBy = "khachTrongPhong")
	private List<PhuPhi> listPhuPhi;
	private Date ngayCheckOut;
	private double giaPhong;
	
	public KhachTrongPhong(int id, HoaDon hoadon, Phong phong, List<DichVuPhong> dsdichvu, List<PhuPhi> listPhuPhi,
			Date ngayCheckOut, double giaPhong) {
		super();
		this.id = id;
		this.hoadon = hoadon;
		this.phong = phong;
		this.dsdichvu = dsdichvu;
		this.listPhuPhi = listPhuPhi;
		this.ngayCheckOut = ngayCheckOut;
		this.giaPhong = giaPhong;
	}
	
	public KhachTrongPhong(int id, HoaDon hoadon, Phong phong) {
		super();
		this.id = id;
		this.hoadon = hoadon;
		this.phong = phong;
	}



//	public KhachTrongPhong(HoaDon hoadon, Phong phong, double giaPhong,float PhuTroi, float phuPhi, String ghiChu) {
//		super();
//		this.hoadon = hoadon;
//		this.phong = phong;
//		GiaPhong = giaPhong;
//		PhuPhi = phuPhi;
//		GhiChu = ghiChu;
//		this.PhuTroi=PhuTroi;
//	}



	public KhachTrongPhong(int id) {
		super();
		this.id = id;
	}

	

	public KhachTrongPhong() {
	}


	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public HoaDon getHoadon() {
		return hoadon;
	}
	public void setHoadon(HoaDon hoadon) {
		this.hoadon = hoadon;
	}
	public Phong getPhong() {
		return phong;
	}
	public void setPhong(Phong phong) {
		this.phong = phong;
	}

	public List<DichVuPhong> getDsdichvu() {
		return dsdichvu;
	}

	public void setDsdichvu(List<DichVuPhong> dsdichvu) {
		this.dsdichvu = dsdichvu;
	}

	public List<PhuPhi> getListPhuPhi() {
		return listPhuPhi;
	}

	public void setListPhuPhi(List<PhuPhi> listPhuPhi) {
		this.listPhuPhi = listPhuPhi;
	}

	public Date getNgayCheckOut() {
		return ngayCheckOut;
	}

	public void setNgayCheckOut(Date ngayCheckOut) {
		this.ngayCheckOut = ngayCheckOut;
	}

	public double getGiaPhong() {
		return giaPhong;
	}

	public void setGiaPhong(double giaPhong) {
		this.giaPhong = giaPhong;
	}

	
	
	
}
